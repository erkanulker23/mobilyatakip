APP_NAME="Mobilya Takip"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Production (Laravel Forge) için örnek:
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://yourdomain.com

APP_LOCALE=tr
APP_FALLBACK_LOCALE=tr
APP_TIMEZONE=Europe/Istanbul

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=mobilyatakip
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# Production'da HTTPS kullanıyorsanız: SESSION_SECURE_COOKIE=true

CACHE_STORE=file
QUEUE_CONNECTION=sync

# Mail (canlıda SMTP veya Mailgun vb. kullanın)
MAIL_MAILER=log
# MAIL_HOST=
# MAIL_PORT=587
# MAIL_USERNAME=
# MAIL_PASSWORD=
# MAIL_ENCRYPTION=tls
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="${APP_NAME}"

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Production'da: LOG_LEVEL=error veya warning
