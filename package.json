{
  "name": "mobilyatakip",
  "version": "1.0.0",
  "description": "Mobilya Takip - Stok, Satış, Teklif, Tedarikçi, SSH, Cari Yönetimi",
  "private": true,
  "scripts": {
    "build": "nest build",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build:frontend && npm run build",
    "start": "nest start",
    "start:prod": "node dist/main.js",
    "start:install": "INSTALL_MODE=1 node dist/main.js",
    "kill-port": "lsof -ti:3001 | xargs kill -9 2>/dev/null || true",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "dev:frontend": "cd frontend && npm run dev",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/typeorm.config.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/config/typeorm.config.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/config/typeorm.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "@nestjs/throttler": "^5.1.1",
    "@nestjs/typeorm": "^10.0.1",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fast-xml-parser": "^5.3.4",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "nodemailer": "^6.9.8",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.15.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.19",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^4.0.0",
    "@types/pdfkit": "^0.13.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
